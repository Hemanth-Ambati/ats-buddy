{
    "name": "ats-buddy-monorepo",
    "version": "1.0.0",
    "private": true,
    "description": "Monorepo for ATS Buddy application components",
    "workspaces": [
        "frontend",
        "backend/functions/*/src",
        "functions"
    ],
    "scripts": {
        "build": "npm-run-all build:*",
        "build:frontend": "npm run build --workspace=frontend",
        "build:backend-proxy": "npm run build --workspace=backend/functions/atsbuddyGeminiProxy/src",
        "build:functions": "npm run build --workspace=functions",
        "dev": "npm-run-all --parallel dev:*",
        "dev:frontend": "npm run dev --workspace=frontend"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5",
        "typescript": "^5.0.0",
        "prettier": "^3.0.0"
    }
}